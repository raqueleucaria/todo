<% if @task.parent_id.nil? %>
  <%= turbo_stream.remove "empty_state" %>
  
  <%= turbo_stream.prepend "tasks" do %>
    <%= render "task", task: @task %>
  <% end %>
  
  <%= turbo_stream.update "new_task" do %>
    <%= render "form", task: Task.new %>
  <% end %>
<% else %>
  <%= turbo_stream.replace dom_id(@task.parent) do %>
    <%= render "task", task: @task.parent.reload %>
  <% end %>
<% end %>

<%= turbo_stream.update "notice" do %>
  <div class="fixed top-4 right-4 bg-green-500 text-white px-6 py-3 rounded-lg shadow-lg z-50 transition-all duration-300" 
       data-controller="notification" 
       data-notification-timeout-value="3000">
    <div class="flex items-center">
      <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
      </svg>
      <%= @task.parent_id.nil? ? "Tarefa criada com sucesso!" : "Subtarefa criada com sucesso!" %>
    </div>
  </div>
<% end %>